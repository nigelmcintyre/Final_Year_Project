<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nigelmcintyre.login.addMeal">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addFoodButton"
        android:id="@+id/btnAddFood"
        android:onClick="addFoodButtonClick"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/btnDelete"
        android:layout_alignEnd="@+id/btnDelete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please enter meal name:"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputMealName"
        android:hint="meal name"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listMeals"
        android:layout_marginTop="300dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:layout_below="@+id/btnAddFood"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:onClick="onDeleteClick" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputDeleteMeal"
        android:layout_alignBottom="@+id/btnDelete"
        android:layout_centerHorizontal="true"
        android:width="115dp"
        android:hint="meal name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View past meals"
        android:id="@+id/pastMeals"
        android:layout_marginTop="230dp"

        android:layout_centerHorizontal="true"
        android:onClick="viewPastClick" />
</RelativeLayout>
